{
	"include": ["src"],
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"outDir": "bin",
		"sourceMap": true,
		"target": "es6",
		"lib": ["es2017"],

		"baseUrl": ".",
		"paths": {
			"*": ["src/types/*"]
		}
	}
}
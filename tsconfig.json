{
    "include": ["src"],
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "outDir": "bin",
        "sourceMap": true,
        "target": "es2017",
        "newLine": "crlf",

        "baseUrl": ".",
        "paths": {
            "*": ["src/types/*"]
        }
    }
}

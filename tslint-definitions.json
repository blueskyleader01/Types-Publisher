{
	"extends": "./tslint-common.json",
	"rules": {
		"align": false, // TODO
		"only-arrow-functions": false, // TODO: This was activating for `declare function socket(type: string, options?: any): Socket;`
		"class-name": false, // TODO
		"comment-format": false, // TODO
		"curly": false,
		"eofline": false,
		"indent": false,
		"jsdoc-format": false,
		"max-line-length": false, // TODO
		"no-consecutive-blank-lines": false,
		"no-reference": false, // TODO: forbid "../" reference, but not "./" reference
		"no-shadowed-variable": false,
		"no-string-literal": false,
		"no-unused-variable": false,
		"no-var-keyword": false,
		"quotemark": false,
		"variable-name": false,
		"whitespace": [
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-type",
			"check-typecast"
		]
	}
}